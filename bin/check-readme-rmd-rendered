#!/bin/bash

# adapted from https://github.com/r-lib/usethis/blob/master/inst/templates/readme-rmd-pre-commit.sh

num_readmes=$(git diff --cached --name-only | grep -Eic '^README\.[R]?md$')

if [[ "$num_readmes" -eq 0 ]]
then
    exit 0
fi

if [[ README.Rmd -nt README.md ]] || [[ "$num_readmes" -lt 2 ]]
then
    exit 1
fi
